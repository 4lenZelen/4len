ServerName                      "ProFTPD Default Installation"
ServerType                      standalone
DefaultServer                   on
ScoreboardFile          /var/run/proftpd/proftpd.scoreboard

Port                            21

#UseIPiv6                               on

Umask                           022

MaxInstances                    10

CommandBufferSize       512

User                            proftp
Group                           proftp

DefaultRoot ~

AllowOverwrite          off

<Limit SITE_CHMOD>
  DenyAll
</Limit>

DisplayLogin            "Hostischev_FTP_server"
MaxClients              3 "Sorry, max %m users - try again later"

TimeoutLogin            20

<Limit LOGIN>
 AllowUser test1
 AllowUser test2
 DenyAll
</Limit>

<Anonymous /var/ftp>

  <Limit LOGIN>
      AllowAll
  </Limit>

   User                         proftp
   Group                                proftp

   UserAlias                    anonymous ftpuser

   <Directory /var/ftp>
    <Limit WRITE>
     DenyAll
    </Limit>
   </Directory>

   <Directory /var/ftp/upload>
    <Limit STOR MKD XMKD>
     AllowAll
    </Limit>

    <Limit DELE RMD XRMD READ>
     DenyAll
    </Limit>
   </Directory>

   <Directory /var/ftp/incoming>
   <Limit ALL>
     DenyAll
    </Limit>

    <Limit CDUP CWD PWD XCWD XCUP>
     AllowAll
    </Limit>

    <Limit STOR STOU>
     AllowAll
    </Limit>
   </Directory>

   <Limit WRITE>
     DenyAll
   </Limit>

    <Limit LOGIN>
     Deny from 192.168.254.0/24
    </Limit>
</Anonymous>
<Directory/var/ftp/upload>
    AllowOverwrite off
    <Limit STOR>
      AllowAll
    </Limit>

    <Limit RETR>
      DenyAll
    </Limit>
</Directory>
<Directory/var/ftp/incoming>
    <Limit WRITE>
      AllowAll
    </Limit>
    <Limit LIST NLIST MLSD STAT>
      DenyAll
    </Limit>
    <Limit LOGIN>
      Allow from 172.16.16.0/24
    </Limit>
    <Limit LOGIN>
      Deny from 192.168.132.0/24
    </Limit>
